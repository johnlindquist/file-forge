{
  "name": "@johnlindquist/ghi",
  "description": "Ingest GitHub repositories and local directories for analysis",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnlindquist/ghi.git"
  },
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ghi": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest --watch false",
    "test:watch": "vitest --watch",
    "dev": "node --experimental-strip-types src/index.ts",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "verify:bin": "pnpm build && [ -f dist/index.js ] || (echo 'dist/index.js not found' && exit 1)",
    "prepublishOnly": "pnpm build",
    "prepare": "husky && husky install",
    "pre-commit": "pnpm lint && pnpm build:check && pnpm verify:bin",
    "semantic-release": "semantic-release",
    "check:include": "pnpm build && pnpm exec node dist/index.js -i src",
    "check:graph": "pnpm build && pnpm exec node dist/index.js -g src/graph.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "tarballDir": "dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "dist/*.tgz"
        }
      ]
    ]
  },
  "keywords": [
    "github",
    "ingest",
    "cli",
    "directory",
    "analysis"
  ],
  "author": "John Lindquist",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@tsconfig/node23": "^23.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/madge": "^5.0.3",
    "@types/node": "^22.10.10",
    "@types/node-fetch": "^2.6.11",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^9.19.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^8.0.0",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@octokit/rest": "^21.1.0",
    "@types/micromatch": "^4.0.9",
    "clipboardy": "^4.0.0",
    "conf": "^13.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "env-paths": "^3.0.0",
    "globby": "^14.0.1",
    "ignore": "^7.0.3",
    "madge": "^8.0.0",
    "micromatch": "^4.0.8",
    "mkdirp": "^3.0.1",
    "nanoid": "^5.0.9",
    "node-fetch": "^3.3.2",
    "sanitize-filename": "^1.6.3",
    "simple-git": "^3.27.0",
    "yargs": "^17.7.2",
    "zx": "^8.3.0"
  }
}
