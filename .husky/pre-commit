#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Check if HEAD is detached (likely during rebase or cherry-pick)
if ! git symbolic-ref -q HEAD > /dev/null; then
  echo "Skipping pre-commit hooks on detached HEAD."
  exit 0
fi

# Block direct commits to main
current_branch=$(git symbolic-ref --short HEAD)
if [ "$current_branch" = "main" ]; then
  echo "ğŸš« Direct commits to the main branch are not allowed."
  echo "Please create a feature/fix branch and submit a Pull Request."
  exit 1
fi

echo "ğŸ” Running pre-commit checks on staged files..."

# Run lint-staged
npx lint-staged

# Check the exit code of lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed. Please fix the issues and try committing again."
  exit 1
fi

echo "âœ… Pre-commit checks passed."
exit 0
